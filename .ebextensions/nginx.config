files:
  "/etc/nginx/conf.d/research_app.conf":
    mode: "644"
    owner: "root"
    group: "root"
    content: |
      location /research/ {
          proxy_pass http://127.0.0.1:8899/research;
          proxy_set_header Host $host;
          proxy_set_header X-Real-IP $remote_addr;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      }